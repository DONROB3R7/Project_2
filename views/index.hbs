<!-- HeroSection HTML init  -->
<div class="carousel carousel-main" data-flickity='{ "hash": true , "contain": true }'>
  {{#each dataDB}}
      <div class="carousel-cell"  style="background-image:url({{poster}})" > 
        <div class="cell-wrapper col-8" >
              <div class="cell-title">
                  {{title}}
              </div>
              <div class="cell-content">
                  {{plot}}
              </div>
              <div class="cell-date">
                Next show: 12.12.2022
              </div>
              <div class="cell-buttons">
                <a href='/venue' class="btn btn-warning">Book now</button>
                <a href={{trailer}} target="_blank" class="btn btn-light">Watch Trailer</a>
        </div>
      </div> 
  </div>
            
  {{/each}}


 
  
</div>

<!-- Main-Wrapper HTML init  -->
 <section class="main-wrapper">
    <h2>Cinema program</h2>
    <span>Movies currently showing at 6:00PM at Iron Cinema - Storkower Str. 132</span>

    <div class="row align-items-center">
      {{#each dataDB}}
        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-12">
            <div class="row-wrapper">
              <img src={{img}} alt={{title}} >
              <a href='/venue' class="btn btn-warning">Book now</a>
              <div class="title">{{title}}</div>
            </div>
          </div>
            
      {{/each}}
   </div>
 </section>



